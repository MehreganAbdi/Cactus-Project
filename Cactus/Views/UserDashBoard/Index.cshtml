@using CactusApplication.DTOs;
@model IEnumerable<CartDTO>

@{
    ViewData["Title"] = "Dash Board";
}



<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Detail</th>
            <th scope="col">Price</th>
            <th scope="col"> Cancel </th>
        </tr>
    </thead>
    @{
        var i = 1;
        var total = 0;
    }
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@i</th>
               
                    <td>@item.Product.ProductName</td>
                <td><a class="btn btn-primary" asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId">Detail</a></td>
                    <td>
                        
                            <span>@item.Product.Cost</span>
                        
                    </td>
                  
                    <td><a class="dropdown-item" asp-action="DeleteItem" asp-controller="UserDashBoard" asp-route-id="@item.CartItemId">Cancel </a></td>
                


            </tr>
        </tbody>
        i++;
        total += item.Product.Cost;
    }
    <thead>
        <tr>
            <th scope="col">*</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Total :</th>
            <th scope="col">@total</th>

        </tr>
    </thead>

</table>


<br />
